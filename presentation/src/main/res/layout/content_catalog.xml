<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/starwars_background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".catalog.CatalogActivity"
    tools:showIn="@layout/activity_catalog">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/loadingFrameLayout"
        android:visibility="visible"
        >

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.Widget.AppCompat.ProgressBar"
            android:indeterminate="true"
            android:layout_gravity="center"
            android:id="@+id/loadingProgressBar"
            />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/errorRelativeLayout"
        android:visibility="gone"
        android:layout_gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/errorTextView"
            android:text="@string/error_title_message"
            android:layout_centerInParent="true"
            android:layout_above="@+id/errorImageView"
            />

        <ImageView
            android:layout_width="@dimen/error_image_width"
            android:layout_height="@dimen/error_image_height"
            android:layout_centerInParent="true"
            android:background="@drawable/yodasad"
            android:id="@+id/errorImageView"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_below="@+id/errorImageView"
            android:text="Dynamic Text - Error Description"
            android:layout_centerInParent="true"
            android:id="@+id/errorDescriptionTextView"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/retryButton"
            android:layout_below="@id/errorDescriptionTextView"
            android:text="@string/retry_connection"
            />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/catalogRecyclerView"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

</RelativeLayout>